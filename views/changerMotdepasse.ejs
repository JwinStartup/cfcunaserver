<%- include ('layout/entete') %>
<div class="flex w-full items-center justify-center pt-10">

    <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 ">
        <form class="space-y-6 space-x-3"  action="/changerMotdepasse" method="post">
            <h5 class="text-xl font-medium text-gray-900 "Changer mot de passe . . .</h5>
            <div class="mb-3">
                <label for="text" class="block mb-2 text-sm font-medium text-gray-900 ">Nom utilisateur</label>
                <input type="text" name="nom" id="nom" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg  block w-full p-2.5 " placeholder="Votre nom utilisateur" required />
            </div>
            <div class="mb-3">
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 ">Mot de passe</label>
                <input type="password" name="password" id="password" placeholder="Entrer votre mot de passe" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg  block w-full p-2.5 " required />
            </div>
            <div class="mb-3">
                <label for="passwordConfirme" class="block mb-2 text-sm font-medium text-gray-900 ">Confirmer </label>
                <input type="password" name="passwordConfirme" id="passwordConfirme" placeholder="Confirmer votre mot de passe" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg  block w-full p-2.5 " required />
            </div>
            <button type="submit" class="w-full text-white bg-green-700 hover:bg-green-800  font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Modifier</button>
            
        </form>
    </div>
    
</div>


<%- include ('layout/footer') %>