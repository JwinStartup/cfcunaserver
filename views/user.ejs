<%- include ('layout/entete') %>

<h1 class="font-bold w-full text-center my-4 text-2xl text-blue-500">LISTE DES UTILISATEURS</h1>
<div class="m-3 w-[95%] ">
    <div class="relative overflow-x-auto  sm:rounded-lg w-full">
        <div class="flex flex-column  w-full  sm:flex-row flex-wrap space-y-4 sm:space-y-0 items-center justify-end pb-4">
            <a  href="/inscription" class="inline-flex items-center  text-black bg-green-500 border border-gray-300 focus:outline-none hover:bg-green-100 focus:ring-4 focus:ring-green-100 font-medium rounded-lg text-sm px-3 py-1.5 " >
                Créer
            </a>
        </div>
           

    <table class="w-full text-sm text-left rtl:text-right text-gray-500 ">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
               
                
                
                <th scope="col" class="px-6 py-3">
                    Role
                </th>
                
                <th scope="col" class="px-6 py-3">
                </th>
                <th scope="col" class="px-6 py-3">
                </th>
            </tr>
        </thead>
        <tbody>
                     <% liste.forEach(user => { %>
                        <tr class=
                        "bg-white border-b hover:bg-gray-50 ">
                          
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap ">
                                 <%= user.nom %>                              </th>
                            <td class="px-6 py-4">
                                <a href="#" class="font-medium text-gray-600  "> <%= user.role %>  </a>
                            </td>
                            <td class="px-6 py-4">
                                <a href="#" class="font-medium text-blue-600 ">Changer rôle</a>
                            </td>
                            <td class="px-6 py-4">
                                <a href="#" class="font-medium text-blue-600 ">Supprimer</a>
                            </td>
                        </tr>

                     <% }) %>
            
           
                
        </tbody>
    </table>

</div>

</div>

<%- include ('layout/footer') %>